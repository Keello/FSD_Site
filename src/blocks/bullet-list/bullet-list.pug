mixin bullet-list(param)
  -let className
    if(param.class)
      -className = param.class + " bullet-list"
    else
      -className = "bullet-list"
  if(param.theme == "colorful")
    -className +=" bullet-list_colorful"

  -let itemClassName = "bullet-list__item"
  if(param.theme == "colorful")
    -itemClassName +=" bullet-list__item_color_"
  h3.label= param.label
  ul(class = className)
    -for(let i = 0; i < param.value.length; i++)
      if(param.theme == "colorful")
        li(class = itemClassName+(i+1))= param.value[i]
      else
        li(class = itemClassName)= param.value[i]