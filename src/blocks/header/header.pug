mixin header(options)
  header.header
    .header__container.container
      .header__logo.logo
        a(href="index.pug")
          img.logo__img(src=require("./../img/logo.svg").default alt="logo")
        .logo__text T<i class="icon-not_interested"></i>xin
      include ./../menu/menu.pug
      +menu({class:"header__menu", values:options.menu})
      if(options.user != "" && options.user != null)
        p.header__user-text= options.user
      else
        button.header__button.button Войти
        button.header__button.button.button_colorful Зарегистрироваться