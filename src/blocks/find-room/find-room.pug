mixin find-room(options)
  form.card-find-room.card(action=options.action)
    h1.card__title= options.title
    .card__row-with-label
      +dropdown-date({label:['прибытие','выезд']})
    .card__row-with-label
      +dropdown({label:"Гости", placeholder:"Сколько гостей",
        value:[
        'Взрослые',
        'дети',
        'младенцы'
        ]})
    .card-find-room__button
      +input({type:"submit", value:options.button})