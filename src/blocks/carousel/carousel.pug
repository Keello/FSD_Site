mixin slider(options)
  .slider
    .slider__wrapper
      .slider__items
        each photo in options.photos
          img.slider__item(src="/blocks/card-room/img/"+photo)
    a.slider__control.slider__control_prev(href="#" role="button")
    a.slider__control.slider__control_next.slider__control_show(href="#" role="button")

script(src="/blocks/carousel/carousel.js")