mixin feedback(options)
  -let className
  if(options.class)
    -className = options.class + " feedback"
  else
    -className = "feedback"
  div(class = className)
    .feedback__user-logo.ibg
      img(src="./../img/"+options.image alt="user_logo")
    p.feedback__user-name.text
      span.text__title= options.title
      =options.subtitle
    .feedback__like-button
      +like-button(options.likes)
    .feedback__body
      p.feedback__body-text.text= options.description