mixin diagram()
  .diagram
    figure.diagram__body
      svg(width="100%" height="100%" viewbox="0 0 36 36" class="diagram__container")
        linearGradient(id="orange-gradient" x1="50%" y1="0" x2="50%" y2="100%")
          stop(offset="0%" stop-color="#ffe39c")
          stop(offset="100%" stop-color="#ffba9c")
        circle(class="diagram__hole" cx="18" cy="18" r="15.91549430918954" fill="#fff")
        circle(class="diagram__ring" cx="18" cy="18" r="15.91549430918954" fill="transparent" stroke="#d2d3d4" stroke-width="1")
        circle(class="diagram__segment" cx="18" cy="18" r="15.91549430918954" fill="transparent" stroke="#BC9CFF" stroke-width="1" stroke-dasharray="25 75" stroke-dashoffset="25")
        circle(class="diagram__segment" cx="18" cy="18" r="15.91549430918954" fill="transparent" stroke="#6FCF97" stroke-width="1" stroke-dasharray="25 75" stroke-dashoffset="0")
        circle(class="diagram__segment" cx="18" cy="18" r="15.91549430918954" fill="transparent" stroke="url(#orange-gradient)" stroke-width="1" stroke-dasharray="50 50" stroke-dashoffset="75")
        g(class="diagram__text")
          text(x="18" y="18" class="diagram__number") 260
          text(x="18" y="18" class="diagram__subtext") Голосов
      figcaption(class="diagram__legend")
        +bullet-list({theme:"colorful", value:[
          "Великолепно",
          "Хорошо",
          "Удовлетворительно",
          "Разочарован"]})