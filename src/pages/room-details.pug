doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="keywords", content="")
    meta(name="description", content="")


    include ./../fonts/material-icons/svg/all-icons.svg
    include ./../fonts/font-awesome/svg/all-icons.svg

    //-------------IMPORTS------------------------
    include ./../blocks/header/header.pug
    include ./../blocks/footer/footer.pug
    include ./../blocks/find-room/find-room.pug
    include ./../blocks/dropdown/dropdown.pug
    include ./../blocks/input/input.pug
    include ./../blocks/burger/burger.pug
    include ./../blocks/rate-button/rate-button.pug
    include ./../blocks/pagination/pagination.pug
    include ./../blocks/feedback/feedback.pug
    include ./../blocks/like-button/like-button.pug
    include ./../blocks/room-reservation/room-reservation.pug
    include ./../blocks/card-room/card-room.pug
    include ./../blocks/carousel/carousel.pug
    include ./../blocks/banner/banner.pug
    include ./../blocks/room-info/room-info.pug
    include ./../blocks/bullet-list/bullet-list.pug
    include ./../blocks/diagram/diagram.pug

    title Room details

  body.body
    .body__wrapper
      +header({
        menu:{"О нас":[""],
          "Услуги":["1"],
          "Вакансии":[""],
          "Новости":[""],
          "Соглашения":["1"]},
        user:""})
      main.page
        .room
          +banner({class:"room__banner"})
          .room__content.container
            .room__row.room__row_mobile
              .room__column.room__column_main
                .room__row
                  .room__column.room__column_small
                    .room__details
                      h2.room__title Сведения о номере
                      +room-info({icon:"insert_emoticon", title:"Комфорт", text:"Шумопоглощающие стены"})
                      +room-info({icon:"location_city", title:"Удобство", text:"Окно в каждой из спален"})
                      +room-info({icon:"whatshot", title:"Уют", text:"Номер оснащен камином"})
                  .room__column
                    .room__impressions
                      h2.room__title.room__title_margin Впечатления от номера
                      +diagram()
                .room__feedbacks
                  .room__feedback-title
                    h2.room__title Отзывы посетителей номера
                    span.room__feedback-count 2 отзыва
                  .room__feedback__item
                    +feedback({
                      title:"Мурад Сарафанов",
                      image:"user-logo.png",
                      subtitle:"5 дней назад",
                      description:"Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
                      likes:12})
                  .room__feedback__item
                    +feedback({
                      title:"Патрисия Стёклышкова",
                      image:"user-logo2.png",
                      subtitle:"Неделю назад",
                      description:"Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент",
                      likes:2})
                .room__row
                  .room__column.room__column_small
                    .room__rules
                      h2.room__title.room__title_offset_bottom.room__title_offset_left Правила
                       +bullet-list({value:[
                        "Нельзя с питомцами",
                        "Без вечеринок и мероприятий",
                        "Время прибытия — после 13:00, а\u00A0выезд до 12:00",
                        ]})
                  .room__column
                    .room__cancel
                      h2.room__title.room__title_offset_bottom Отмена
                      p.text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
              .room__column.room__column_aside
                .room__card.card
                  +room-reservation({
                    number:888,
                    type:"люкс",
                    price:"9 990",
                    })
      +footer()